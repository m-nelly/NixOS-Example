"basic options"
set nocompatible
set number
set showmatch
set showcmd
set ignorecase
set mouse=a
set hlsearch
set incsearch
set tabstop=4
set shiftwidth=4
set autoindent
syntax on
set ttyfast
set clipboard=unnamedplus
set wrap linebreak nolist
set fillchars=eob:\ 
set noshowmode

"theme changes"
highlight LineNr ctermfg=DarkGrey

